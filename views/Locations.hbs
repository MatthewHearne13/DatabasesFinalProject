<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="./js/deleteLocation.js"></script>
<body>
    <main>
        {{!-- Create a table --}}
        <h2>Locations</h2>
<table id="location-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            <th>Location ID</th>
            <th>Address</th>
            <th>Location Type</th>
            <th>Delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.idLocation}}</td>
            <td>{{this.address}}</td>
            <td>{{this.locationType}}</td>
            <td><button onclick="deleteLocation({{this.idLocation}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>

<h2>Adding a new Location</h2>
<p>To add a new Location, please fill out the information below and click 'Submit'!</p>
<form id="add-location-form">
    <fieldset>
    <label for="input-address">Address:</label>
    <input type="text" name="input-address" id="input-address">

    <label for="input-LocationType">Location Type:</label>
    <select name="input-LocationType" id="dropdownLocationTypeSelect">
        <option>Select a Location Type</option>
        {{#each locationTypes}}
        <option value="{{this.idLocationType}}">{{this.locationType}}</option>
        {{/each}}
    </select>

    <input type="submit" class="submitFormButton">
    </fieldset>
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/addLocation.js"></script>

<h2>Edit a Location</h2>
<p>To edit Location, please fill select the location ID and update the information as needed!</p>
<form id="update-location-form-ajax">
    <fieldset>
    <label for="input-location">Location ID:</label>
    <select name="input-idLocation" id="dropdownLocationIDSelect">
        <option>Select a Location ID</option>
        {{#each data}}
        <option value="{{this.idLocation}}">{{this.idLocation}}</option>
        {{/each}}
    </select>
<br>
    <label for="input-location-Address" id="input-location-Address-Label">Enter a new address:</label>
    <input type="text" id="input-location-Address" name="input-location-Address-update">
<br>
    <label for="input-LocationType">Location Type:</label>
    <select name="input-LocationType" id="dropdownLocationTypeSelect-update">
        <option>Select a Location Type</option>
        {{#each locationTypes}}
        <option value="{{this.idLocationType}}">{{this.locationType}}</option>
        {{/each}}
    </select>
<br>
    <input type="submit" class="submitFormButton">
    </fieldset>
</form>
<script src="./js/updateLocation.js"></script>
    </main>            